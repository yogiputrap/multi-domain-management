<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap"
        rel="stylesheet">
    <link href="/css/output.css" rel="stylesheet">
</head>

<body class="min-h-screen bg-slate-50">
    <%- include('../partials/admin-sidebar') %>

        <main class="main-content">
            <!-- Header -->
            <div class="flex items-center justify-between mb-8">
                <div>
                    <h1 class="text-2xl font-bold text-slate-900">Domain Management</h1>
                    <p class="text-slate-600">Manage your root domains</p>
                </div>
                <button onclick="UI.showModal('addDomainModal')" class="btn btn-primary">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                    </svg>
                    Add Domain
                </button>
            </div>

            <!-- Domains Table -->
            <div class="card">
                <div class="card-body p-0">
                    <% if (domains && domains.length> 0) { %>
                        <div class="table-container border-0">
                            <table class="data-table">
                                <thead>
                                    <tr>
                                        <th>Domain</th>
                                        <th>Subdomains</th>
                                        <th>Users</th>
                                        <th>Status</th>
                                        <th>Created</th>
                                        <th class="text-right">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% domains.forEach(domain=> { %>
                                        <tr>
                                            <td>
                                                <div class="flex items-center gap-3">
                                                    <div
                                                        class="w-10 h-10 rounded-xl bg-gradient-to-br from-primary-500 to-primary-600 flex items-center justify-center">
                                                        <svg class="w-5 h-5 text-white" fill="none"
                                                            stroke="currentColor" viewBox="0 0 24 24">
                                                            <path stroke-linecap="round" stroke-linejoin="round"
                                                                stroke-width="2"
                                                                d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9">
                                                            </path>
                                                        </svg>
                                                    </div>
                                                    <div>
                                                        <p class="font-semibold text-slate-900">
                                                            <%= domain.rootDomain %>
                                                        </p>
                                                        <p class="text-xs text-slate-400">ID: <%= domain.id.substring(0,
                                                                8) %>...</p>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="font-medium">
                                                    <%= domain._count.subdomains %>
                                                </span>
                                            </td>
                                            <td>
                                                <span class="font-medium">
                                                    <%= domain._count.domainUsers %>
                                                </span>
                                            </td>
                                            <td>
                                                <% if (domain.status==='active' ) { %>
                                                    <span class="badge badge-success">Active</span>
                                                    <% } else { %>
                                                        <span class="badge badge-danger">Disabled</span>
                                                        <% } %>
                                            </td>
                                            <td class="text-slate-500">
                                                <%= new Date(domain.createdAt).toLocaleDateString() %>
                                            </td>
                                            <td>
                                                <div class="flex items-center justify-end gap-2">
                                                    <% if (domain.status==='active' ) { %>
                                                        <button
                                                            onclick="toggleDomainStatus('<%= domain.id %>', 'disabled')"
                                                            class="p-2 text-amber-600 hover:bg-amber-50 rounded-lg transition-colors"
                                                            title="Disable">
                                                            <svg class="w-5 h-5" fill="none" stroke="currentColor"
                                                                viewBox="0 0 24 24">
                                                                <path stroke-linecap="round" stroke-linejoin="round"
                                                                    stroke-width="2"
                                                                    d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636">
                                                                </path>
                                                            </svg>
                                                        </button>
                                                        <% } else { %>
                                                            <button
                                                                onclick="toggleDomainStatus('<%= domain.id %>', 'active')"
                                                                class="p-2 text-emerald-600 hover:bg-emerald-50 rounded-lg transition-colors"
                                                                title="Enable">
                                                                <svg class="w-5 h-5" fill="none" stroke="currentColor"
                                                                    viewBox="0 0 24 24">
                                                                    <path stroke-linecap="round" stroke-linejoin="round"
                                                                        stroke-width="2"
                                                                        d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z">
                                                                    </path>
                                                                </svg>
                                                            </button>
                                                            <% } %>
                                                                <button
                                                                    onclick="confirmDeleteDomain('<%= domain.id %>', '<%= domain.rootDomain %>')"
                                                                    class="p-2 text-red-600 hover:bg-red-50 rounded-lg transition-colors"
                                                                    title="Delete">
                                                                    <svg class="w-5 h-5" fill="none"
                                                                        stroke="currentColor" viewBox="0 0 24 24">
                                                                        <path stroke-linecap="round"
                                                                            stroke-linejoin="round" stroke-width="2"
                                                                            d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16">
                                                                        </path>
                                                                    </svg>
                                                                </button>
                                                </div>
                                            </td>
                                        </tr>
                                        <% }) %>
                                </tbody>
                            </table>
                        </div>
                        <% } else { %>
                            <div class="p-12 text-center">
                                <div
                                    class="w-16 h-16 rounded-full bg-slate-100 flex items-center justify-center mx-auto mb-4">
                                    <svg class="w-8 h-8 text-slate-400" fill="none" stroke="currentColor"
                                        viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9">
                                        </path>
                                    </svg>
                                </div>
                                <p class="text-slate-600 mb-2">No domains added yet</p>
                                <p class="text-sm text-slate-400 mb-4">Add your first domain to get started</p>
                                <button onclick="UI.showModal('addDomainModal')" class="btn btn-primary">
                                    Add Domain
                                </button>
                            </div>
                            <% } %>
                </div>
            </div>
        </main>

        <!-- Add Domain Modal -->
        <div id="addDomainModal" class="modal-backdrop">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="text-lg font-semibold text-slate-900">Add New Domain</h3>
                    <button onclick="UI.hideModal('addDomainModal')"
                        class="p-2 text-slate-400 hover:text-slate-600 rounded-lg hover:bg-slate-100">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                    </button>
                </div>
                <form id="addDomainForm" onsubmit="addDomain(event)">
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="rootDomain" class="form-label">Root Domain</label>
                            <input type="text" id="rootDomain" name="rootDomain" class="form-input"
                                placeholder="example.com" required pattern="^[a-zA-Z0-9][a-zA-Z0-9-]*\.[a-zA-Z]{2,}$">
                            <p class="text-sm text-slate-400 mt-2">Enter the root domain (e.g., example.com, mysite.id)
                            </p>
                        </div>

                        <!-- Cloudflare Settings -->
                        <div class="mt-4 p-4 bg-blue-50 rounded-lg border border-blue-200">
                            <div class="flex items-center gap-2 mb-3">
                                <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor"
                                    viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z">
                                    </path>
                                </svg>
                                <h4 class="font-semibold text-blue-900">Cloudflare DNS Provisioning</h4>
                            </div>

                            <div class="form-group mb-3">
                                <label for="cloudflareApiToken" class="form-label">Cloudflare API Token</label>
                                <input type="text" id="cloudflareApiToken" name="cloudflareApiToken" class="form-input"
                                    placeholder="Enter your Cloudflare API Token">
                                <p class="text-sm text-slate-500 mt-1">
                                    Get your API token from
                                    <a href="https://dash.cloudflare.com/profile/api-tokens" target="_blank"
                                        class="text-blue-600 hover:underline">
                                        Cloudflare Dashboard
                                    </a>
                                </p>
                            </div>

                            <div class="form-group">
                                <label for="cloudflareZoneId" class="form-label">Cloudflare Zone ID</label>
                                <input type="text" id="cloudflareZoneId" name="cloudflareZoneId" class="form-input"
                                    placeholder="Enter your Cloudflare Zone ID">
                                <p class="text-sm text-slate-500 mt-1">
                                    Find your Zone ID in the domain's Overview page on Cloudflare
                                </p>
                            </div>

                            <div class="alert alert-info mt-3">
                                <svg class="w-4 h-4 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd"
                                        d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z"
                                        clip-rule="evenodd"></path>
                                </svg>
                                <div class="text-sm">
                                    <p class="font-medium">Optional for Mock Mode</p>
                                    <p>These fields are optional in mock mode. Fill them when ready to use real
                                        Cloudflare DNS.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" onclick="UI.hideModal('addDomainModal')"
                            class="btn btn-secondary">Cancel</button>
                        <button type="submit" id="addDomainBtn" class="btn btn-primary">Add Domain</button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Delete Confirmation Modal -->
        <div id="deleteDomainModal" class="modal-backdrop">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="text-lg font-semibold text-slate-900">Delete Domain</h3>
                    <button onclick="UI.hideModal('deleteDomainModal')"
                        class="p-2 text-slate-400 hover:text-slate-600 rounded-lg hover:bg-slate-100">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="flex items-start gap-4">
                        <div class="w-12 h-12 rounded-full bg-red-100 flex items-center justify-center flex-shrink-0">
                            <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z">
                                </path>
                            </svg>
                        </div>
                        <div>
                            <p class="text-slate-700">Are you sure you want to delete <strong
                                    id="deleteDomainName"></strong>?</p>
                            <p class="text-sm text-slate-500 mt-1">This will also delete all associated subdomains and
                                assignments. This action cannot be undone.</p>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" onclick="UI.hideModal('deleteDomainModal')"
                        class="btn btn-secondary">Cancel</button>
                    <button type="button" id="confirmDeleteBtn" onclick="deleteDomain()" class="btn btn-danger">Delete
                        Domain</button>
                </div>
            </div>
        </div>

        <script src="/js/app.js"></script>
        <script>
            let deleteDomainId = null;

            async function addDomain(e) {
                e.preventDefault();
                const btn = document.getElementById('addDomainBtn');
                const rootDomain = document.getElementById('rootDomain').value;
                const cloudflareApiToken = document.getElementById('cloudflareApiToken').value;
                const cloudflareZoneId = document.getElementById('cloudflareZoneId').value;

                UI.showLoading(btn);

                try {
                    await API.createDomain(rootDomain, cloudflareApiToken, cloudflareZoneId);
                    UI.showNotification('Domain added successfully', 'success');
                    setTimeout(() => window.location.reload(), 1000);
                } catch (error) {
                    UI.showNotification(error.message, 'error');
                    UI.hideLoading(btn);
                }
            }

            async function toggleDomainStatus(id, status) {
                try {
                    await API.updateDomainStatus(id, status);
                    UI.showNotification(`Domain ${status === 'active' ? 'enabled' : 'disabled'} successfully`, 'success');
                    setTimeout(() => window.location.reload(), 1000);
                } catch (error) {
                    UI.showNotification(error.message, 'error');
                }
            }

            function confirmDeleteDomain(id, name) {
                deleteDomainId = id;
                document.getElementById('deleteDomainName').textContent = name;
                UI.showModal('deleteDomainModal');
            }

            async function deleteDomain() {
                const btn = document.getElementById('confirmDeleteBtn');
                UI.showLoading(btn);

                try {
                    await API.deleteDomain(deleteDomainId);
                    UI.showNotification('Domain deleted successfully', 'success');
                    setTimeout(() => window.location.reload(), 1000);
                } catch (error) {
                    UI.showNotification(error.message, 'error');
                    UI.hideLoading(btn);
                }
            }
        </script>
</body>

</html>